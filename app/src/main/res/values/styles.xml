<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CardButton">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:elevation">10dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:src">@drawable/arrow</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:background">@drawable/show_details_background</item>
    </style>

    <style name="red_dot">
        <item name="android:elevation">8.5dp</item>
        <item name="android:layout_width">14dp</item>
        <item name="android:layout_height">14dp</item>
        <item name="android:background">@drawable/circle</item>
    </style>

    <style name="CardTitle">
        <item name="android:textSize">23sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:elevation">8.5dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="CardDetails" parent="CardTitle">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="CardImage">
        <item name="android:layout_width">85dp</item>
        <item name="android:layout_height">85dp</item>
        <item name="android:layout_marginStart">22dp</item>
        <item name="android:elevation">8.5dp</item>
        <item name="android:padding">25dp</item>
        <item name="android:src">@drawable/syringe</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:background">@drawable/syringe_background</item>
    </style>

    <style name="CardStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">160dp</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:layout_marginTop">14dp</item>
    </style>

    <style name="CardStyle.marginBottom">
        <item name="android:layout_marginBottom">14dp</item>
    </style>

    <!-- statistic fragment styles -->
    <style name="StatisticsCardStyle">
        <item name="android:layout_width">130dp</item>
        <item name="android:layout_height">180dp</item>
        <item name="android:layout_margin">24dp</item>
        <item name="cardCornerRadius">24dp</item>
        <item name="cardElevation">8dp</item>
        <item name="cardBackgroundColor">@color/brandColor</item>

    </style>

    <style name="StatisticsCardStyleBackgroundColor">
        <item name="android:layout_width">130dp</item>
        <item name="android:layout_height">180dp</item>
        <item name="android:layout_margin">24dp</item>
        <item name="cardCornerRadius">24dp</item>
        <item name="cardElevation">8dp</item>
        <item name="cardBackgroundColor">@color/secondaryBrandColor</item>
    </style>

    <style name="StatisticsTextCountryNameStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">24dp</item>
        <item name="android:gravity">center</item>
        <item name="android:elevation">8.5dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>


    </style>

    <style name="StatisticsTextStyleTotalCases">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">11sp</item>
        <item name="android:gravity">center</item>
        <item name="android:elevation">8.5dp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="MyLayoutBackground">
        <item name="android:background">@drawable/my_fragment_statistics</item>
        <item name="android:color">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginTop">150dp</item>

    </style>

    <style name="totalCasesText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:gravity">start</item>
        <item name="android:text">@string/total_cases</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxHeight">150dp</item>
        <item name="android:minWidth">10dp</item>
    </style>

    <!-- Home fragment styles -->
    <style name="circle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>


    <style name="Card_View_Home_Fragment">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardCornerRadius">30dp</item>
        <item name="cardElevation">8dp</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">130dp</item>

    </style>

    <style name="Text_Details_Home_Fragment">
        <item name="android:background">@drawable/home_fragment_text_view_style</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">28dp</item>
        <item name="android:elevation">8.5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text_Details_Home_Fragment.SecondaryBrandColor">
        <item name="android:background">@drawable/home_fragment_text_view_style_secondary</item>

    </style>

    <style name="shapable_image_view_home_fragment">
        <item name="android:layout_width">55dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:elevation">8.5dp</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="shapeAppearanceOverlay">@style/circle</item>
    </style>


    <style name="Text_Describe_Home_Fragment">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:minWidth">250dp</item>
        <item name="android:maxHeight">50dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:textSize">11.5sp</item>
        <item name="android:elevation">8.5dp</item>
    </style>

    <style name="Text_Describe_Home_Fragment.MarginTop">
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="MainCardInHomeFragment">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">240dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:maxHeight">300dp</item>
        <item name="cardBackgroundColor">@color/secondaryBrandColor</item>
        <item name="cardCornerRadius">30dp</item>
        <item name="cardElevation">8dp</item>

    </style>

    <style name="LottieAnimationView">
        <item name="android:layout_width">280dp</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:layout_marginTop">28dp</item>
        <item name="android:visibility">visible</item>
        <item name="lottie_autoPlay">true</item>
        <item name="lottie_loop">true</item>
        <item name="lottie_rawRes">@raw/lets_vaccine</item>
    </style>

    <style name="TextViewTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:elevation">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="TextViewTitleTwo">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">19dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:elevation">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textStyle">bold</item>

    </style>

    <!-- End Home fragment styles -->

    <style name="ParentCard">
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="ParentCard.maxHeight">
        <item name="android:layout_height">match_parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
    </style>

    <style name="MainCardImage">
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="android:layout_width">128dp</item>
        <item name="android:layout_height">128dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:elevation">8dp</item>
        <item name="android:padding">24dp</item>
        <item name="android:src">@drawable/syringe</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:background">@drawable/main_card_image_background</item>
    </style>


    <style name="texts">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="texts.main">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="texts.cardDet">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:elevation">10dp</item>
        <item name="android:textColor">#999999</item>
    </style>

    <style name="vaccineInfoHeadlines">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">28dp</item>
    </style>

    <style name="vaccineInfoHeadlinesDetails">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:minWidth">400dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_margin">20dp</item>
    </style>

    <!-- Round picture -->
    <style name="circleImageStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- About Fragment Styles -->

    <style name="aboutHeadlineText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="aboutNamesText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:elevation">8.5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginTop">12dp</item>
    </style>

</resources>