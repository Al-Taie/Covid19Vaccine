        app:layout_constraintStart_toEndOf="@+id/nofel_avatar"
        app:layout_constraintTop_toTopOf="@+id/nofel_jummaa"/>


    <!--Shahlaa Info-->
    <androidx.cardview.widget.CardView
        style="@style/developerCard.marginEnd"
        android:id="@+id/shahlaa_haider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/about_guideline2"
        app:layout_constraintTop_toBottomOf="@id/anwar_alfarhany"/>

    <com.google.android.material.imageview.ShapeableImageView
        style="@style/developerImage"
        android:id="@+id/shahlaa_avatar"
        android:src="@drawable/female2"
        app:layout_constraintBottom_toBottomOf="@+id/shahlaa_haider"
        app:layout_constraintStart_toStartOf="@+id/shahlaa_haider"
        app:layout_constraintTop_toTopOf="@+id/shahlaa_haider"
        app:shapeAppearanceOverlay="@style/circularAvatar" />

    <TextView
        style="@style/developerInfo.name"
        android:text="@string/shahlaa_haider"
        app:layout_constraintBottom_toBottomOf="@+id/shahlaa_haider"
        app:layout_constraintEnd_toEndOf="@+id/shahlaa_haider"
        app:layout_constraintStart_toEndOf="@+id/shahlaa_avatar"
        app:layout_constraintTop_toTopOf="@+id/shahlaa_haider" />

    <TextView
        style="@style/developerInfo.role"
        android:text="@string/team_member"
        app:layout_constraintBottom_toBottomOf="@+id/shahlaa_haider"
        app:layout_constraintEnd_toEndOf="@+id/shahlaa_haider"
        app:layout_constraintStart_toEndOf="@+id/shahlaa_avatar"
        app:layout_constraintTop_toTopOf="@+id/shahlaa_haider"/>

</androidx.constraintlayout.widget.ConstraintLayout>