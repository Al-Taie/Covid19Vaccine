        app:layout_constraintStart_toEndOf="@+id/anwar_avatar"
        app:layout_constraintTop_toTopOf="@+id/anwar_alfarhany"/>


    <!--Nofel Info-->
    <androidx.cardview.widget.CardView
        style="@style/developerCard.magrinStart"
        android:id="@+id/nofel_jummaa"
        app:layout_constraintEnd_toEndOf="@id/about_guideline1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tamara_mouneer"/>

    <com.google.android.material.imageview.ShapeableImageView
        style="@style/developerImage"
        android:id="@+id/nofel_avatar"
        android:src="@drawable/male2"
        app:layout_constraintBottom_toBottomOf="@+id/nofel_jummaa"
        app:layout_constraintStart_toStartOf="@+id/nofel_jummaa"
        app:layout_constraintTop_toTopOf="@+id/nofel_jummaa"
        app:shapeAppearanceOverlay="@style/circularAvatar" />

    <TextView
        style="@style/developerInfo.name"
        android:text="@string/nofel_jummaa"
        app:layout_constraintBottom_toBottomOf="@+id/nofel_jummaa"
        app:layout_constraintEnd_toEndOf="@+id/nofel_jummaa"
        app:layout_constraintStart_toEndOf="@+id/nofel_avatar"
