<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.fragments.AboutFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/about_guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.48"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/about_guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.52"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/upper_card"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_margin="16dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:elevation="8dp"
        android:text="@string/about_upper_card_text"
        android:textColor="@color/black"
        android:textSize="13.5sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/upper_card"
        app:layout_constraintEnd_toEndOf="@+id/upper_card"
        app:layout_constraintStart_toStartOf="@+id/upper_card"
        app:layout_constraintTop_toTopOf="@+id/upper_card" />

    <!-- Bareq Info-->
    <androidx.cardview.widget.CardView
        style="@style/developerCard.magrinStart"
        android:id="@+id/bareq_altaamah"
        app:layout_constraintEnd_toStartOf="@+id/about_guideline1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/upper_card" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/bareq_avatar"
        style="@style/developerImage"
        android:src="@drawable/male_one"
        app:layout_constraintBottom_toBottomOf="@+id/bareq_altaamah"
        app:layout_constraintEnd_toEndOf="@+id/bareq_altaamah"
        app:layout_constraintStart_toStartOf="@+id/bareq_altaamah"
        app:layout_constraintTop_toTopOf="@+id/bareq_altaamah"
        app:shapeAppearanceOverlay="@style/circularAvatar" />

    <TextView
        android:id="@+id/bareq_name"
        style="@style/developerInfo.name"
        android:text="@string/bareq_al_taamah"
        app:layout_constraintBottom_toBottomOf="@+id/bareq_altaamah"
        app:layout_constraintEnd_toEndOf="@+id/bareq_altaamah"
        app:layout_constraintStart_toStartOf="@+id/bareq_altaamah"
        app:layout_constraintTop_toBottomOf="@+id/bareq_avatar" />

    <TextView
        style="@style/developerInfo.role"
        android:text="@string/instructor"
        app:layout_constraintBottom_toBottomOf="@+id/bareq_altaamah"
        app:layout_constraintEnd_toEndOf="@+id/bareq_altaamah"
        app:layout_constraintStart_toStartOf="@+id/bareq_altaamah"
        app:layout_constraintTop_toBottomOf="@+id/bareq_name" />

    <!--Ahmed Info-->
    <androidx.cardview.widget.CardView
        style="@style/developerCard.marginEnd"
        android:id="@+id/ahmed_mones"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/about_guideline2"
        app:layout_constraintTop_toBottomOf="@id/upper_card"/>

    <com.google.android.material.imageview.ShapeableImageView
        style="@style/developerImage"
        android:id="@+id/ahmed_avatar"
        android:src="@drawable/male_two"
        app:layout_constraintBottom_toBottomOf="@+id/ahmed_mones"
        app:layout_constraintEnd_toEndOf="@+id/ahmed_mones"
        app:layout_constraintStart_toStartOf="@+id/ahmed_mones"
        app:layout_constraintTop_toTopOf="@+id/ahmed_mones"
        app:shapeAppearanceOverlay="@style/circularAvatar" />

    <TextView
        android:id="@+id/ahmed_name"
        style="@style/developerInfo.name"
        android:text="@string/ahmed_mones"
        app:layout_constraintBottom_toBottomOf="@+id/ahmed_mones"
        app:layout_constraintEnd_toEndOf="@+id/ahmed_mones"
        app:layout_constraintStart_toStartOf="@+id/ahmed_mones"
        app:layout_constraintTop_toBottomOf="@+id/ahmed_avatar" />

    <TextView
        style="@style/developerInfo.role"
        android:text="@string/team_leader"
        app:layout_constraintBottom_toBottomOf="@+id/ahmed_mones"
        app:layout_constraintEnd_toEndOf="@+id/ahmed_mones"
        app:layout_constraintStart_toStartOf="@+id/ahmed_mones"
        app:layout_constraintTop_toBottomOf="@+id/ahmed_name" />


    <!--Zahraa Info-->
    <androidx.cardview.widget.CardView
        style="@style/developerCard.magrinStart"
        android:id="@+id/zahraa_zahir"
        app:layout_constraintEnd_toEndOf="@id/about_guideline1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bareq_altaamah"/>

    <com.google.android.material.imageview.ShapeableImageView
        style="@style/developerImage"
        android:id="@+id/zahraa_avatar"
        android:src="@drawable/female_one"
        app:layout_constraintBottom_toBottomOf="@+id/zahraa_zahir"
        app:layout_constraintStart_toStartOf="@+id/zahraa_zahir"
        app:layout_constraintTop_toTopOf="@+id/zahraa_zahir"
        app:layout_constraintEnd_toEndOf="@id/zahraa_zahir"
        app:shapeAppearanceOverlay="@style/circularAvatar" />


    <TextView
        android:id="@+id/zahraa_name"
        style="@style/developerInfo.name"
        android:text="@string/zahraa_zahir"
        app:layout_constraintBottom_toBottomOf="@+id/zahraa_zahir"
        app:layout_constraintEnd_toEndOf="@+id/zahraa_zahir"
        app:layout_constraintStart_toStartOf="@+id/zahraa_zahir"
        app:layout_constraintTop_toBottomOf="@+id/zahraa_avatar" />

    <TextView
        style="@style/developerInfo.role"
        android:text="@string/team_member"
        app:layout_constraintBottom_toBottomOf="@+id/zahraa_zahir"
        app:layout_constraintEnd_toEndOf="@+id/zahraa_zahir"
        app:layout_constraintStart_toStartOf="@id/zahraa_zahir"
        app:layout_constraintTop_toBottomOf="@+id/zahraa_name" />



    <!--Ammar Info-->
    <androidx.cardview.widget.CardView
        style="@style/developerCard.marginEnd"
        android:id="@+id/ammar_thaaer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/about_guideline2"
        app:layout_constraintTop_toBottomOf="@id/ahmed_mones"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ammar_avatar"
        style="@style/developerImage"
        android:src="@drawable/male_one"
        app:layout_constraintBottom_toBottomOf="@+id/ammar_thaaer"
        app:layout_constraintEnd_toEndOf="@+id/ammar_thaaer"
        app:layout_constraintStart_toStartOf="@+id/ammar_thaaer"
        app:layout_constraintTop_toTopOf="@+id/ammar_thaaer"
        app:shapeAppearanceOverlay="@style/circularAvatar" />

    <TextView
        android:id="@+id/ammar_name"
        style="@style/developerInfo.name"
        android:text="@string/ammar_thaaer"
        app:layout_constraintBottom_toBottomOf="@+id/ammar_thaaer"
        app:layout_constraintEnd_toEndOf="@+id/ammar_thaaer"
        app:layout_constraintStart_toStartOf="@+id/ammar_thaaer"
        app:layout_constraintTop_toBottomOf="@+id/ammar_avatar" />

    <TextView
        style="@style/developerInfo.role"
        android:text="@string/team_member"
        app:layout_constraintBottom_toBottomOf="@+id/ammar_thaaer"
        app:layout_constraintEnd_toEndOf="@+id/ammar_thaaer"
        app:layout_constraintStart_toStartOf="@+id/ammar_thaaer"
        app:layout_constraintTop_toBottomOf="@+id/ammar_name"/>


    <!--Zainab Info-->
    <androidx.cardview.widget.CardView
        style="@style/developerCard.magrinStart"
        android:id="@+id/zainab_mahmood"
        app:layout_constraintEnd_toEndOf="@id/about_guideline1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/zahraa_zahir"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/zainab_avatar"
        style="@style/developerImage"
        android:src="@drawable/female_two"
        app:layout_constraintBottom_toBottomOf="@+id/zainab_mahmood"
        app:layout_constraintEnd_toStartOf="@+id/about_guideline1"
        app:layout_constraintStart_toStartOf="@+id/zainab_mahmood"
        app:layout_constraintTop_toTopOf="@+id/zainab_mahmood"
        app:shapeAppearanceOverlay="@style/circularAvatar" />

    <TextView
        android:id="@+id/zainab_name"
        style="@style/developerInfo.name"
        android:text="@string/zainab_mahmood"
        app:layout_constraintBottom_toBottomOf="@+id/zainab_mahmood"
        app:layout_constraintEnd_toEndOf="@+id/zainab_mahmood"
        app:layout_constraintStart_toStartOf="@+id/zainab_mahmood"
        app:layout_constraintTop_toBottomOf="@+id/zainab_avatar" />

    <TextView
        style="@style/developerInfo.role"
        android:text="@string/team_member"
        app:layout_constraintBottom_toBottomOf="@+id/zainab_mahmood"
        app:layout_constraintEnd_toEndOf="@+id/zainab_mahmood"
        app:layout_constraintStart_toStartOf="@+id/zainab_mahmood"
        app:layout_constraintTop_toBottomOf="@+id/zainab_name" />


    <!--Karrar Info-->
    <androidx.cardview.widget.CardView
        style="@style/developerCard.marginEnd"
        android:id="@+id/karrar_mohammed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/about_guideline2"
        app:layout_constraintTop_toBottomOf="@id/ammar_thaaer"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/karrar_avatar"
        style="@style/developerImage"
        android:src="@drawable/male_two"
        app:layout_constraintBottom_toBottomOf="@+id/karrar_mohammed"
        app:layout_constraintEnd_toEndOf="@+id/karrar_mohammed"
        app:layout_constraintStart_toStartOf="@+id/karrar_mohammed"
        app:layout_constraintTop_toTopOf="@+id/karrar_mohammed"
        app:shapeAppearanceOverlay="@style/circularAvatar" />

    <TextView
        android:id="@+id/karrar_name"
        style="@style/developerInfo.name"
        android:text="@string/karrar_mohammed"
        app:layout_constraintBottom_toBottomOf="@+id/karrar_mohammed"
        app:layout_constraintEnd_toEndOf="@+id/karrar_mohammed"
        app:layout_constraintStart_toStartOf="@+id/karrar_mohammed"
        app:layout_constraintTop_toBottomOf="@+id/karrar_avatar" />

    <TextView
        style="@style/developerInfo.role"
        android:text="@string/team_member"
        app:layout_constraintBottom_toBottomOf="@+id/karrar_mohammed"
        app:layout_constraintEnd_toEndOf="@+id/karrar_mohammed"
        app:layout_constraintStart_toStartOf="@+id/karrar_mohammed"
        app:layout_constraintTop_toBottomOf="@+id/karrar_name" />

</androidx.constraintlayout.widget.ConstraintLayout>